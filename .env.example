# Copy this file to .env and fill values to enable Twitter/X streaming.
# If you leave these blank, the app will run with a simulated stream.

HASHTAG=#MyCampaign

# Twitter/X API v2 (Bearer-only streaming)
TWITTER_BEARER_TOKEN=

# (Optional) If you want to post-process with language hints, set ISO codes like: en, hi
LANG_HINT=en

# Dashboard 
DASH_HOST=127.0.0.1
DASH_PORT=8050
REFRESH_MS=1500
ROLLING_WINDOW_MIN=5
